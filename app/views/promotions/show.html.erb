<p class="alert alert-block alert-info hide" id="notice">
	<a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
	<%= notice %>
</p>
<div class="box border blue">
	<div class="box-title">
		<h4><i class="fa fa-calendar"></i> Section:</h4>
	</div>
	<div class="box-body">
		 <div class="form-horizontal " action="#">
			<div class="form-group">
				<label class="col-md-3 control-label">Title (English)</label>
				<div class="col-md-9">
					<input type="text" name="regular" class="form-control" value="<%= @promotion.title_en %>" disabled>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">Title (Arabic)</label>
				<div class="col-md-9">
					<input type="text" name="regular" class="form-control" value="<%= @promotion.title_ar %>" disabled>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">Description (English)</label>
				<div class="col-md-9">
					<input type="text" name="regular" class="form-control" value="<%= @promotion.description_en %>" disabled>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">Description (Arabic)</label>
				<div class="col-md-9">
					<input type="text" name="regular" class="form-control" value="<%= @promotion.description_ar %>" disabled>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">Type</label>
				<div class="col-md-9">
					<input type="text" name="regular" class="form-control" value="<%= @promotion.item_type %>" disabled>
				</div>
			</div>
			<div class="clearfix">
				<% if @promotion.gallery? %>
					<%= render "promotions/promotion_gallery/photos/form" %>
				<% elsif @promotion.video? %>
					<%= render "promotions/promotion_videos/show" %>
				<% end %>
			</div>
			<div class="form-group text-center">
				<%= link_to 'Edit', edit_promotion_path(@promotion), :class => "btn btn-warning" %> |
				<%= link_to 'Back', promotions_url,:class => "btn btn-primary" %>
			</div>																			
		</div>
	</div>
</div>