<p class="alert alert-block alert-info hide" id="notice">
	<a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
	<%= notice %>
</p>
<div class="box border blue">
	<div class="box-title">
		<h4><i class="fa fa-calendar"></i> Origins:</h4>
	</div>
	<div class="box-body">
		 <div class="form-horizontal " action="#">
			<div class="form-group">
				<label class="col-md-3 control-label">Product Section:</label>
				<div class="col-md-9">
					<input type="text" class="form-control" value="<%= @product.product_section.title %>" disabled>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">Origin</label>
				<div class="col-md-9">
					<input type="text" class="form-control" value="<%= @product.origin.title %>" disabled>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">Brand</label>
				<div class="col-md-9">
					<input type="text" class="form-control" value="<%= @product.brand.title %>" disabled>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">Tile size</label>
				<div class="col-md-9">
					<input type="text" class="form-control" value="<%= @product.tile_size.height %> x <%= @product.tile_size.width %>" disabled>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">Colors</label>
				<div class="col-md-9">
					  <% @product.colors.each do |color| %>
						<div style="background: <%= color.code %>; width: 100px; height: 30px;"></div>
					  <% end %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">Code</label>
				<div class="col-md-9">
					<input type="text" class="form-control" value="<%= @product.code %>" disabled>
				</div>
			</div>
           <div class="form-group">
				<label class="col-md-3 control-label">Wall</label>
				<div class="col-md-9">
					<input type="checkbox" class="" <%= @product.is_wall? ? "checked" : '' %> disabled>
				</div>
			</div>
           <div class="form-group">
				<label class="col-md-3 control-label">Floor</label>
				<div class="col-md-9">
					<input type="checkbox" class="" <%= @product.is_floor ? "checked" : '' %> disabled>
				</div>
			</div>
           <div class="form-group">
				<label class="col-md-3 control-label">Imported</label>
				<div class="col-md-9">
					<input type="checkbox" class="" <%= @product.is_imported ? "checked" : '' %> disabled>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">Description</label>
				<div class="col-md-9">
					<textarea class="form-control" disabled><%= @product.description %></textarea>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">Image</label>
				<div class="col-md-9">
					<%= image_tag(@product.image.thumb.url) %>
				</div>
			</div>
           <div class="clearfix">

           <%= render "products/product_gallery/photos/form" %>
			</div>
			<div class="form-group text-center">
				<%= link_to 'Edit', edit_product_path(@product), :class => "btn btn-warning" %> |
				<%= link_to 'Back', products_path ,:class => "btn btn-primary" %>
			</div>																			
		</div>
	</div>
</div>