<p class="alert alert-block alert-info hide" id="notice">
	<a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
	<%= notice %>
</p>
<div class="box border blue">
	<div class="box-title">
		<h4><i class="fa fa-calendar"></i>Gallery Info:</h4>
	</div>
	<div class="box-body">
		 <div class="form-horizontal ">
			<div class="form-group">
				<label class="col-md-3 control-label">Title: (English)</label>
				<div class="col-md-9">
					<input type="text" name="regular" class="form-control" value="<%= @gallery.title_en %>" disabled>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">Title: (Arabic)</label>
				<div class="col-md-9">
					<input type="text" name="regular" class="form-control" value="<%= @gallery.title_ar %>" disabled>
				</div>
			</div>

			<%= render "seven_gallery/photos/photo_wrapper" %>
			<div class="form-group">
				<div class="col-md-9 col-md-offset-3">
					<%= link_to "rearrange", seven_gallery.arrange_photos_gallery_path(@gallery), :class => "btn btn-warning" %>	
				</div>
			</div>
			<%= render "seven_gallery/photos/photo", photos: @photos %>
			<div class="row">
			  <%= will_paginate @photos %>
			</div>
			<hr>
			<div class="form-group text-center">
				<%= link_to 'Edit', seven_gallery.edit_gallery_path(@gallery), :class => "btn btn-warning" %> | 
				<%= link_to 'Back', seven_gallery.galleries_path,:class => "btn btn-primary" %>
			</div>	
		</div>
	</div>