<div class="box border blue">
	<div class="box-title">
		<h4><i class="fa fa-calendar"></i>Photos: (Drag & Drop to rearrange)</h4>
	</div>
	<div class="box-body">
	  <div class="photos_wrapper" data-url="<%= url_for arrange_photos_gallery_path @gallery %>">
		<p class="arrange_status">Saving..</p>
		<% @gallery.photos.each do |photo| %>
			<div id="photo_<%= photo.id %>">
			  <%= photo.caption %> - <%= image_tag photo.image_url(:thumb) %>
			  <%= link_to 'edit', seven_gallery.edit_gallery_photo_path(@gallery, photo),:class => "btn btn-warning" %> -
			  <%= link_to 'delete', seven_gallery.gallery_photo_path(@gallery, photo), method: :delete, data: {confirm: 'Sure?'},:class => "btn btn-danger" %>
			</div>
		<% end %>
	  </div>
	  <p></p>
		<%= link_to "Back", seven_gallery.gallery_path(@gallery),:class => "btn btn-primary" %>
	</div>
</div>