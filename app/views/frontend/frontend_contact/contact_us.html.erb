<% content_for :title, "El Sallab - Contact Us" %>

<section class="Sbreadcrumb">
  <div class="container">
    <ol class="breadcrumb">
      <li><a href="<%= frontend_home_url %>">Homepage</a></li>
      <li><a href="#">Contact Us</a></li>
    </ol>
  </div>
</section>

<section class="innerContainer contact">
  <div class="container">
    <address class="mtb-50">
      For Inquires,<br>Feel Free to Contact Us Now!<br>
      <%= @general_info.contact_email %>
    </address>
  </div>
  <div class="contact-form">
    <%= form_tag frontend_contact_contact_us_url, class: "container form-validate" do %>
        <div class="row">
          <div class="col-sm-6 col-md-4">
            <div class="form-group">
              <%= label_tag :fullname, "Full name" %>
              <%= text_field_tag :fullname, nil, class: "form-control", required: "required", "aria-required": true %>
            </div>
            <div class="form-group">
              <%= label_tag :email %>
              <%= email_field_tag :email, nil, class: "form-control", required: "required", "aria-required": true %>
            </div>
            <div class="form-group">
              <%= label_tag :subject %>
              <%= text_field_tag :subject, nil, class: "form-control", required: "required", "aria-required": true %>
            </div>
          </div>
          <div class="col-sm-6 col-md-8">
            <div class="form-group">
              <%= label_tag :content, "Your Message" %>
              <%= text_area_tag :content, nil, class: "form-control", rows: 9, required: "required", "aria-required": true %>
            </div>
            <div class="form-group">
              <%= submit_tag("Send", class: "btn btn-yellow") %>
              <input class="btn btn-grey" type="reset" value="Reset">
            </div>
          </div>
        </div>
    <% end %>
  </div>
</section>