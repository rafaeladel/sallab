<div class="box border blue">
	<div class="box-title">
		<h4><i class="fa fa-user"></i>Forgot your password?</h4>
	</div>
	<div class="box-body big">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,:class => 'form-horizontal form-validate' }) do |f| %>
		  <%= devise_error_messages! %>
			<div class="form-group clearfix">
                <%= f.label :email, class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                  <%= f.email_field :email, class: "form-control",autofocus: true %>
                </div>
            </div>
		  <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>
		<% end %>
	</div>
</div>
<%= render "devise/shared/links" %>
