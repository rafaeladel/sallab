<%= form_for object, url: url, method: :put, :html => {:class => 'form-horizontal form-validate'} do |f| %>
    <% if object.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
  <div class="box border primary">
      <div class="box-title">
        <h4><i class="fa fa-money"></i>General Info</h4>
      </div>
      <div class="box-body">
        <div class="tabbable header-tabs">
          <ul class="nav nav-tabs">
            <li><a href="#box_tab1" data-toggle="tab"><i class="fa fa-keyboard-o"></i>
              <span class="hidden-inline-mobile">Arabic</span></a></li>
            <li class="active"><a href="#box_tab2" data-toggle="tab"><i class="fa fa-globe"></i>
              <span class="hidden-inline-mobile">English</span></a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane fade" id="box_tab1">
              <div class="form-group clearfix">
                <%= job.label :title_ar, class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                  <%= job.text_field :title_ar, class: "form-control" %>
                </div>
              </div>
              <div class="form-group clearfix">
                <%= job.label :description_ar, class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                  <%= job.text_area :description_ar, class: "form-control" %>
                </div>
              </div>
              <div class="form-group clearfix">
                <%= job.label :keywords_ar, class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                  <%= job.text_field :keywords_ar, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="tab-pane fade in active" id="box_tab2">
              <div class="form-group clearfix">
                <%= job.label :title_en, class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                  <%= job.text_field :title_en, class: "form-control" %>
                </div>
              </div>
              <div class="form-group clearfix">
                <%= job.label :description_en, class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                  <%= job.text_area :description_en, class: "form-control" %>
                </div>
              </div>
              <div class="form-group clearfix">
                <%= job.label :keywords_en, class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                  <%= job.text_field :keywords_en, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= f.submit class: "btn btn-primary btn-block" %>
<% end %>